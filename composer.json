{
    "name": "lastcall/composer-extra-files",
    "description": "Composer plugin for requiring additional files from composer packages.",
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Rob Bayliss",
            "email": "rob@lastcallmedia.com"
        }
    ],
    "require": {
        "composer-plugin-api": "^1.1",
        "php": ">=5.6",
        "togos/gitignore": "~1.1.1"
    },
    "require-dev": {
        "composer/composer": "~1.0",
        "phpunit/phpunit": "^5.7",
        "friendsofphp/php-cs-fixer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "LastCall\\ExtraFiles\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LastCall\\ExtraFiles\\Tests\\": "tests/"
        }
    },
    "extra": {
        "class": "LastCall\\ExtraFiles\\Plugin"
    }
}
